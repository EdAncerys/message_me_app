<h1 class="ui center aligned large header"> All the Users of the App </h1>
<div class="ui divider"></div>
<h3 class="ui center aligned small header"> Proudly have <%= User.all.count %> users </h3>

<% User.all.each do |user| %>
  <div class="ui centered card">
    <div class="ui card">
      <div class="content">
        <i class="right floated like icon"></i>
        <i class="right floated star icon"></i>
        
          <div class="header">
            <%= user.username %>
          </div>
      
        <div class="description">
          <p></p>
        </div>
      </div>
      <div class="extra content">
        <span class="left floated like">
          <i class="like icon"></i>
          Like
        </span>
        <span class="right floated star">
          <i class="star icon"></i>
          Favorite
        </span>
      </div>
    </div>
  </div>
<% end %>